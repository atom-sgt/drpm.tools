{
  "compilerOptions": {
    "lib": [
      "ES2022",
    ],
    "declarationDir": "dist/types",
    "outDir": "dist/esm",
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "allowJs": true,
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": [
    "src",
    "bin"
  ],
  "exclude": [
    "eslint.config.cjs",
    "node_modules"
  ]
}